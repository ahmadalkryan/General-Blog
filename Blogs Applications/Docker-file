# استخدام صورة .NET
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# نسخ ملفات المشروع
COPY ["Application/Application.csproj", "Application/"]
COPY ["Domain/Domain.csproj", "Domain/"]
COPY ["Infrastructure/Infrastructure.csproj", "Infrastructure/"]
COPY ["Blogs Applications/Blogs Applications.csproj", "Blogs Applications/"]

# استعادة الحزم
RUN dotnet restore "Blogs Applications/Blogs Applications.csproj"

# نسخ كل الملفات والبناء
COPY . .
WORKDIR "/src/Blogs Applications"
RUN dotnet build "Blogs Applications.csproj" -c Release -o /app/build

# النشر
FROM build AS publish
RUN dotnet publish "Blogs Applications.csproj" -c Release -o /app/publish /p:UseAppHost=false

# الصورة النهائية
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Blogs Applications.dll"]